@typeparam TViewModel

<MudDialog Width="50%">
    <DialogContent>
        <!-- Place the detailed view of your view model here -->
        <!-- You can use parameters to pass data to this component -->
        <!-- For example: @ViewModel .Name, @ViewModel .Description, etc. -->
        @foreach (var property in typeof(TViewModel).GetProperties())
        {
            <p>@property.Name: @property.GetValue(ViewModel)</p>
        }
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Cancel">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public TViewModel ViewModel { get; set; }

    void Cancel() => MudDialog.Cancel();
}
