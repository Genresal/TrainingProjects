@page "/datatablesTest"
@using BlazorServerTest.BLL.Services
@using BlazorServerTest.Data.Entities
@inject WeatherForecastService ForecastService
@inject IJSRuntime JS

<DataTable>
	<thead>
	<tr>
		<th>Column 1</th>
		<th>Column 2</th>
        <th>Column 3</th>
        <th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (var forecast in forecasts)
	{
		<tr>
			<td>@forecast.Id</td>
			<td>@forecast.Summary</td>
            <td>@forecast.Date</td>
            <td><ConfirmModalComponent ButtonText="❌" Message="Do you rale want to delete?" Id="@forecast.Id" OnYes="@DeleteHandler" /></td>
		</tr>
	}
	</tbody>
</DataTable>

@code {
    private List<IngredientEntity> forecasts;

    protected override async  Task OnInitializedAsync()
    {
        forecasts = (await ForecastService.GetForecastAsync(String.Empty)).ToList();

    }

    private async Task DeleteHandler(int id)
    {
        await ForecastService.Delete(id);
        forecasts = (await ForecastService.GetForecastAsync(String.Empty)).ToList();
        StateHasChanged();
    }
