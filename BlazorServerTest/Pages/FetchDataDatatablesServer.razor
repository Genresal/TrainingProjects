@page "/datatables"
@using BlazorServerTest.BLL.Services
@using BlazorServerTest.BLL.Models
@inject RecipeService ForecastService
@inject IJSRuntime JS

<DataTable Searchable="true">
	<thead>
	<tr>
            <th>@nameof(RecipeModel.Id)</th>
            <th>@nameof(RecipeModel.Name)</th>
            <th>@nameof(RecipeModel.Description)</th>
            <th>@nameof(RecipeModel.PrepTime)</th>
        <th></th>
	</tr>
	</thead>
</DataTable>

@code {
    private List<RecipeModel> recipes;

    protected override async  Task OnInitializedAsync()
    {
